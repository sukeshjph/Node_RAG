name: RAG Query Service Smoke Tests
description: Comprehensive smoke tests for the RAG Query Service endpoints
version: 1.0.0

variables:
  baseUrl: http://localhost:3000
  contentType: application/json

environment:
  development:
    baseUrl: http://localhost:3000
    timeout: 30000
  production:
    baseUrl: https://your-api.azurewebsites.net
    timeout: 60000

# ========================================
# Health Check Tests
# ========================================

test: Basic Health Check
method: GET
url: {{baseUrl}}/health
expect:
  status: 200
  headers:
    content-type: application/json
  body:
    status: healthy
    timestamp: string
    version: string

test: Detailed Health Check
method: GET
url: {{baseUrl}}/health/detailed
expect:
  status: 200
  body:
    status: healthy
    services: object

test: Service Information
method: GET
url: {{baseUrl}}/info
expect:
  status: 200
  body:
    name: string
    version: string
    description: string

# ========================================
# RAG Query Tests
# ========================================

test: Basic Query - Simple Question
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What is machine learning?"
expect:
  status: 200
  body:
    answer: string
    citations: array
    requestId: string
    metrics: object

test: Query with Filters - Filter by Category
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "How does neural networks work?"
  filters:
    category: "ingested"
expect:
  status: 200
  body:
    answer: string
    citations: array

test: Query with Custom Parameters
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What are the benefits of artificial intelligence?"
  k: 5
  knn: 3
  includeText: true
expect:
  status: 200
  body:
    answer: string
    citations: array
    metrics:
      retrievalTimeMs: number

test: Query with Multiple Filters
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "Explain deep learning algorithms"
  filters:
    category: "research"
    filename: "ai-paper.txt"
  k: 10
  includeText: true
expect:
  status: 200
  body:
    answer: string
    citations: array

test: Query with Vector Field Override
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What is natural language processing?"
  vectorField: "contentVector"
  k: 8
  knn: 6
expect:
  status: 200
  body:
    answer: string
    citations: array

# ========================================
# Error Handling Tests
# ========================================

test: Empty Query - Validation Error
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: ""
expect:
  status: 400
  body:
    error: string

test: Missing Query - Validation Error
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  filters:
    category: "test"
expect:
  status: 400
  body:
    error: string

