test: Invalid K Parameter - Validation Error
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What is AI?"
  k: 150
expect:
  status: 400
  body:
    error: string

test: Invalid Vector Field - Validation Error
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What is AI?"
  vectorField: ""
expect:
  status: 400
  body:
    error: string

# ========================================
# Performance Tests
# ========================================

test: Complex Query - Technical Question
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "Explain the differences between supervised and unsupervised machine learning, including examples of algorithms and use cases for each approach."
  k: 12
  knn: 8
  includeText: true
timeout: 30000
expect:
  status: 200
  body:
    answer: string
    citations: array

test: Multi-topic Query
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "Compare and contrast artificial intelligence, machine learning, and deep learning. What are the key differences and how do they relate to each other?"
  filters:
    category: "ingested"
  k: 15
  includeText: true
timeout: 30000
expect:
  status: 200
  body:
    answer: string
    citations: array

test: Technical Query - Specific Terms
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What are the advantages and disadvantages of using convolutional neural networks for image recognition tasks?"
  k: 10
  knn: 6
  includeText: true
timeout: 30000
expect:
  status: 200
  body:
    answer: string
    citations: array

# ========================================
# Edge Cases
# ========================================

test: Very Short Query
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "AI"
expect:
  status: 200
  body:
    answer: string

test: Query with Special Characters
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What is the difference between AI & ML? (Include examples)"
expect:
  status: 200
  body:
    answer: string

test: Query with Numbers
method: POST
url: {{baseUrl}}/query
headers:
  Content-Type: {{contentType}}
body:
  q: "What are the top 5 machine learning algorithms and their accuracy rates?"
expect:
  status: 200
  body:
    answer: string

